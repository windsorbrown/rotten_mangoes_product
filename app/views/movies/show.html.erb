 

  

<main class="main-content">
        <div class="container">
          <div class="page">
         

            <div class="content">
              
              <div class="row">
              
                <div class="col-md-5">
                 
                  <figure class="movie-poster"><img src="<%=@movie.image%>" alt="#"></figure>
                </div>
                <div class="col-md-7">
                 <p> <%= link_to "Back to all movies", movies_path, {:class => "button"} %></p>
                  <h2 class="movie-title"><%= @movie.title %></h2>
                  <div class="movie-summary">
                   <p> <%= @movie.description %></p>
                  </div>
                  <ul class="movie-meta">
                    <li><strong>Rating:</strong> 
                      <div class="star-rating" title="Rated 4.00 out of 5"><span style="width:80%"><strong class="rating">4.00</strong> out of 5</span></div>
                    </li>
                    <li><strong>Length:</strong> <%= @movie.runtime_in_minutes%> min</li>
                    <li><strong>Premiere:</strong> <%= formatted_date(@movie.release_date) %></li>
                     <li><strong>Director:</strong><%= @movie.director %></li>
               <!--      <li><strong>Category:</strong> Animation/Adventure/Comedy</li> -->
                  </ul>
<!-- 
                  <ul class="starring">
                    <li><strong>Director:</strong><%= @movie.director %></li>
                    <li><strong>Writers:</strong> Chris Sanders (screenplay), Kirk De Micco (screenplay)</li>
                    <li><strong>Stars:</strong> Nicolas Cage, Ryan Reynolds, Emma Stone</li>
                  </ul> -->
                  <h2> 

    
                  (<%= link_to "edit", edit_movie_path(@movie) %>, <%= link_to "delete", movie_path(@movie), method: :delete, confirm: "You sure?" %>)
                  </h2>
                </div>
              </div> <!-- .row -->
              <div class="entry-content">
                <h3>Reviews of <em><%= @movie.title %></em></h3>
       <% if current_user %>
    
     <% @movie.reviews.each do |review| %>
      <p><%= review.text %></p>
      <p><%= review.rating_out_of_ten %>/10</p>
    <p>  <small>- <%= link_to (review.user.full_name) , user_path(review.user) %></small></p>
      <p><hr ></p>
    <% end %>
   <p>   <%= link_to "Write a review!", new_movie_review_path(@movie) , {:class => "button"}%></p>
    <% else %>
      <p>Please <%= link_to "log in", new_session_path %> to see reviews and add your own.</p> 
    <% end %>
              </div>
            </div>
          </div>
        </div> <!-- .container -->
      </main>


